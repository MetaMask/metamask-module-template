{
  // Note that this file is intentionally called `.swcrc.build.json`, so that if
  // we use SWC for other things in the future, this file will not affect them.
  "$schema": "https://json.schemastore.org/swcrc",
  "jsc": {
    "parser": {
      "syntax": "typescript"
    },
    "target": "es2020"
  },
  "sourceMaps": true,
  "exclude": [
    ".*__fixtures__.*",
    ".*__mocks__.*",
    ".*__snapshots__.*",
    ".*__tests?__.*",
    ".*\\.test\\.?.*\\.tsx?",
    ".*\\.d\\.tsx?"
  ]
}
